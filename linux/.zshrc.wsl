# VSCode
export PATH=$PATH:"$WIN_USER_DIR_PATH/AppData/Local/Programs/Microsoft VS Code/bin"

# Docker
export PATH=$PATH:"$WIN_PROGRAM_FILES_DIR_PATH/Docker/Docker/resources/bin"
